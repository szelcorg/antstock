<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.*?>

<fx:root styleClass="glass-pane" type="AnchorPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox spacing="6.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
            <children>         
                <Label text="Date" GridPane.columnIndex="1" />
                <TextField fx:id="dateField" prefColumnCount="7" text="" GridPane.columnIndex="1" />
                <Label text="Company" GridPane.columnIndex="1" />
                <TextField fx:id="companyField" prefColumnCount="9" GridPane.columnIndex="1" />
                <ComboBox prefWidth="150.0" fx:id="transactionTypeCombo"/> 
                
                <Label text="Number" GridPane.columnIndex="1" />
                <TextField fx:id="numberSharesField" prefColumnCount="4" text="" GridPane.columnIndex="1" />
                <Label text="Price share" GridPane.columnIndex="1" />
                <TextField fx:id="priceForOneShareField" prefColumnCount="5" text="" GridPane.columnIndex="1" />
                <Label text="Bank" GridPane.columnIndex="1" />
                <TextField fx:id="bankField" GridPane.columnIndex="1" />                        
                <Button id="iphone" fx:id="addTransactionBtn" stylesheets="@transactioncreator.css" text="Dodaj transakcję" GridPane.columnIndex="1" /> 
                <Button id="iphone" fx:id="removeTransactionBtn" stylesheets="@transactioncreator.css" text="Usuń transakcję" GridPane.columnIndex="1" />
            </children>
            <padding>
                <Insets bottom="6.0" left="6.0" right="5.0" top="5.0" />
            </padding>
     
        </HBox>
    </children>
</fx:root>
